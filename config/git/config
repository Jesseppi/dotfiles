[user]
	name = JesseC
	email = jesse@jessec.dev

[github]
	user = jesseppi

[core]
	excludesfile = ~/.config/git/ignore
	editor = nano
	filemode = false
	trustctime = false
	autocrlf = input
	untrackedCache = true
	pager = diff-so-fancy | less --tabs=4 -RFX
	ignorecase = false

[credential]
	helper = osxkeychain

[grep]
	lineNumber = true

[help]
	autocorrect = 1

[push]
	default = simple
	followTags = true

[fetch]
	prune = true

[alias]
	l = log --pretty=oneline -n 20 --graph --abbrev-commit --pretty=format:'%C(yellow)%h  %Cblue%ad  %Creset%s%Cgreen  [%cn] %Cred%d'
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	hideFromGit = update-index --assume-unchanged
	revealToGit = update-index --no-assume-unchanged
	p = push -u origin
	newpush = !git checkout -b $1 && git push -u origin
	sts = !git remote update && git status
	softy = reset --soft HEAD^
	hardy = reset --hard HEAD
	setLatestCommitAsItBuild = removeItTag && setNewItTag && pushNewItTag
	smash = !git commit --amend --reuse-message=HEAD
	hulksmash = !git add -A && git commit --amend --no-edit && git push -f
	stat = status


[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[pull]
	rebase = true
